    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "attach",
            "name": "Attach to Docker",
            "port": 5858,
            "restart": true,
            "localRoot": "${workspaceFolder}",
            "remoteRoot": "/server",
            "protocol": "auto"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch in Docker",
            "runtimeExecutable": "npm",
            "runtimeArgs": [ "run", "docker:debug" ],
            "port": 5858,
            "restart": true,
            "timeout": 60000,
            "localRoot": "${workspaceFolder}",
            "remoteRoot": "/server",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "protocol": "auto"
        }
    ]
}